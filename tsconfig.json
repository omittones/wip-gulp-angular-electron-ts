{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true
  },
  "include": [
    "src/core.ts",
    "src/miner-status.ts",
    "src/*.ts"
  ],
  "exclude": [
    "**/*-spec.ts"
  ]
}
